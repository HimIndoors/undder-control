<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="UndderControl.Views.MainPage"
             xmlns:helpers="clr-namespace:UndderControl.Helpers"
             Title="{Binding Title}">
    <ContentPage.Resources>
        <ResourceDictionary>
            <helpers:HtmlSourceConverter x:Key="htmlSource" />
        </ResourceDictionary>
    </ContentPage.Resources>
    <StackLayout x:Name="TestStack">
        <Label Text="TESTING" />
        <WebView HeightRequest="200" HorizontalOptions="Fill">
            <WebView.Source>
                <HtmlWebViewSource Html="{Binding Code, Converter={StaticResource htmlSource}}"/>
            </WebView.Source>
        </WebView>
        <Label Text="TESTING" />
        
    </StackLayout>
</ContentPage> 