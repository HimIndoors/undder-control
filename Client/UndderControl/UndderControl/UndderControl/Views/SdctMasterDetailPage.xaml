<?xml version="1.0" encoding="utf-8" ?>
<MasterDetailPage xmlns="http://xamarin.com/schemas/2014/forms"
                  xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
                  xmlns:prism="clr-namespace:Prism.Mvvm;assembly=Prism.Forms"
                  prism:ViewModelLocator.AutowireViewModel="True"
                  x:Class="UndderControl.Views.SdctMasterDetailPage">

    <MasterDetailPage.Master>
        <ContentPage Title="Menu">
            <ContentPage.Padding>
                <OnPlatform x:TypeArguments="Thickness"
                    iOS="21"
                    Android="21"
                    WinPhone="21" />
            </ContentPage.Padding>
            <StackLayout HorizontalOptions="StartAndExpand">
                <Button Text="Home" TextColor="White" BackgroundColor="Transparent" Command="{Binding OnNavigateCommand}" CommandParameter="/SdctMasterDetailPage/NavigationPage/RootPage" />
                <Button Text="Manage Farms" TextColor="White" BackgroundColor="Transparent" Command="{Binding OnNavigateCommand}" CommandParameter="/SdctMasterDetailPage/NavigationPage/ManageFarmsPage" />
                <Button Text="About MSD" TextColor="White" BackgroundColor="Transparent" Command="{Binding OnNavigateCommand}" CommandParameter="/SdctMasterDetailPage/NavigationPage/AboutPage" />
            </StackLayout>
        </ContentPage>
    </MasterDetailPage.Master>
    
</MasterDetailPage>