<?xml version="1.0" encoding="utf-8" ?>
<MasterDetailPage xmlns="http://xamarin.com/schemas/2014/forms"
                  xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
                  xmlns:prism="clr-namespace:Prism.Mvvm;assembly=Prism.Forms"
                  prism:ViewModelLocator.AutowireViewModel="True"
                  x:Class="UndderControl.Views.SdctMasterDetailPage"
                  BackgroundColor="{StaticResource DarkBackgroundColour}">

    <MasterDetailPage.Master>
        <ContentPage Title="Menu">
            <ContentPage.Padding>
                <OnPlatform x:TypeArguments="Thickness" iOS="0, 20, 0, 0" />
            </ContentPage.Padding>
            <StackLayout>
                <Button Text="Home" TextColor="White" BackgroundColor="Gray" Command="{Binding OnNavigateCommand}" CommandParameter="NavigationPage/Root" />
                <Button Text="My Surveys" TextColor="White" BackgroundColor="Gray" Command="{Binding OnNavigateCommand}" CommandParameter="NavigationPage/ManageFarms" />
                <Button Text="My Profile" TextColor="White" BackgroundColor="Gray" Command="{Binding OnNavigateCommand}" CommandParameter="NavigationPage/ManageFarms" />
            </StackLayout>
        </ContentPage>
    </MasterDetailPage.Master>
    
</MasterDetailPage>